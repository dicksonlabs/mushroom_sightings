#!/bin/csh

set SITE=http://mushroomobserver.org
# set SITE=http://localhost:3000

set IMG=../../test/fixtures/images/perf.jpg
set OUTPUTDIR=../log
set DIRNAME=$OUTPUTDIR/`date "+%Y-%m-%d-%H-%M"`

echo $DIRNAME
mkdir -p $DIRNAME
cd $DIRNAME
mkdir -p observer image

echo $IMG
ls -l $IMG
echo -n `date "+%Y-%m-%d %H:%M:%S"`:image/test_upload_speed: >> ../perf.log
/usr/bin/time curl -F "file=@$IMG" $SITE'/image/test_upload_speed?_js=on&_new=true' -o image/test_upload_speed.html -s -i >>& ../perf.log

echo -n `date "+%Y-%m-%d %H:%M:%S"`:observer/list_rss_logs: >> ../perf.log
/usr/bin/time curl $SITE'/observer/list_rss_logs?_js=off&_new=true' -o observer/list_rss_logs.html -s -i >>& ../perf.log

echo -n `date "+%Y-%m-%d %H:%M:%S"`:observer/show_observation: >> ../perf.log
/usr/bin/time curl $SITE'/observer/show_observation/6247?_js=off&_new=true' -o observer/show_observation.html -s -i >>& ../perf.log

echo -n `date "+%Y-%m-%d %H:%M:%S"`:image/show_image: >> ../perf.log
/usr/bin/time curl $SITE'/image/show_image/2815?_js=off&_new=true' -o image/show_image.html -s -i >>& ../perf.log
