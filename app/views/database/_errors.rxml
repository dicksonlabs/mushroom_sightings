if @errors.length > 0
  xml.errors do
    xml.number errors.length
    i = 1
    for error in @errors
      xml.error do
        xml.id    i
        xml.code  error.code
        xml.type  error.title
        xml.text  error.msg
        xml.fatal error.fatal ? 'true' : 'false'
        i += 1
      end
    end
  end
end
