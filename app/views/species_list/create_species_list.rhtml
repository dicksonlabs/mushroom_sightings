<%
  javascript_include_auto_complete
  @title = :species_list_create_title.t

  new_tab_set do
    add_tab(:name_lister_title.t, :action => 'name_lister')
  end
%>

<% form_tag(:action => 'create_species_list') do %>
  <% if !@new_names.blank?
    val = @new_names.map {|x| CGI::escapeHTML(x)}.join('&#10;') %>
    <input id="approved_names" type="hidden" value="<%= val %>"/>
  <% end %>
  <% if !@deprecated_names.blank?
    val = @deprecated_names.map(&:id).join(' ') %>
    <input id="approved_deprecated_names" type="hidden" value="<%= val %>"/>
  <% end %>

  <br/><center><%= submit_tag :CREATE.l %></center>

  <table cellpadding="10">
	<tr>
	  <%= render(:partial => 'form_species_lists') %>
	</tr>
  </table>
<% end %>
