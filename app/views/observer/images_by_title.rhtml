<% @title = 'Images by Title' %>
<div id="Title"><%= @title %></div>
<%
  for image in @images %>
<%= link_to(sprintf("%s %s %s", h(image.unique_name), image.when,
                    truncate(h(image.user.unique_name), MAX_WHO_LENGTH)),
            :action => 'show_image', :id => image.id) %><br/>
<%
  end
%>
</br>
