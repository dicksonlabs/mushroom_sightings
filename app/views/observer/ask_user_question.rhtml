<% @title = 'Email Message for ' + h(@user.name) %>
<div id="Title"><%= @title %></div>

<% form_tag(:action => 'send_user_question', :id => @user) do %>
<center><%= submit_tag "Send" %></center>
<br/>
<label for="email_subject">Subject</label>: 
<%= text_field 'email', 'subject', :size => 70  %><br/>
<label for="email_content">Message</label>:<br/>
<%= text_area 'email', 'content', :cols => 80  %>
<% end %>
