<% @title = :ask_user_question_title.t(:user => @target.legal_name) %>

<% form_tag(:action => 'ask_user_question', :id => @target.id,
            :params => query_params) do %>
  <br/><center><%= submit_tag :app_send.l %></center>

  <label for="email_subject"><%= :ask_user_question_subject.t %>:</label><br/>
  <%= text_field('email', 'subject', :size => 70) %><br/><br/>

  <label for="email_content"><%= :ask_user_question_message.t %>:</label><br/>
  <%= text_area('email', 'content', :cols => 80) %>

  <%= focus_on('email_subject') %>
<% end %>
