<% @title = :sandbox_title.t %>

<table width="1">
  <tr>
    <td>
      <div class="HelpNote"><%= :sandbox_header.tp %></div>

      <% if !@code.nil? %>
        <b><%= :sandbox_look_like.t %>:</b><br/>
        <% if @submit == :sandbox_test.l %>
          <div class="sandbox"><%= sanitize(@code).tpl %></div><br/>
        <% else %>
          <div class="sandbox"><%= h(sanitize(@code).tpl) %></div><br/>
        <% end %>
      <% end %>

      <%= form_tag(:action => "textile_sandbox") %>
        <% if !@code.nil? %>
          <center>
            <%= image_tag("up_arrow.png", :style => "margin-bottom:-6px; margin-right:50px") %>
            <%= submit_tag :sandbox_test.l %>
            <span style='margin-left:20px'></span>
            <%= submit_tag :sandbox_test_codes.l %>
            <%= image_tag("up_arrow.png", :style => "margin-bottom:-6px; margin-left:50px") %>
          </center><br/>
        <% end %>
        <b><%= :sandbox_enter.t %>:</b><br/>
        <%= text_area_tag("code", @code, { :cols => 80, :rows => 10 }) %><br/>
        <% if @code.nil? %>
          <br/>
          <center><%= submit_tag :sandbox_test.l %></center>
        <% end %>
      </form><br/>

      <p><b><%= :sandbox_quick_ref.t %>:</b></p>
      <div style="font-family:monospace; font-size:11px; white-space:pre"><%= :sandbox_sample.l %></div>

      <b><%= :sandbox_web_refs.t %>:</b><br/>
      <div style="margin-left:20px">
        <%= link_to(:sandbox_link1.t, "http://www.textism.com/tools/textile/index.php") %><br/>
        <%= link_to(:sandbox_link2.t, "http://hobix.com/textile/") %><br/>
        <%= link_to(:sandbox_link3.t, "http://www.textism.com/tools/textile/index.php") %><br/>
      </div>
    </td>
  </tr>
</table>
