<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
  <%= auto_discovery_link_tag(:rss, {:controller => 'observer', :action  =>  'rss'}, {:title => :app_rss.l}) %>
  <title><%= :app_title.l %>: <%= if @title.nil? then controller.action_name else @title.strip_html end %></title>
  <%= "<link rel=\"SHORTCUT ICON\" href=\"#{DOMAIN}/images/favicon.ico\" />"%>

  <%= check_if_user_turned_javascript_on %>

  <%=
    css = nil
    if @user and @user.id == 0
      css = 'Admin'
    elsif is_robot?
      css = 'Agaricus'
    else
      if CSS.member?(controller.action_name)
        css = controller.action_name
      else
        unless @user.nil?
          css = @user.theme
        end
      end
      unless CSS.member?(css)
        css = CSS[rand(CSS.length)]
      end
    end
    stylesheet_link_tag 'general', css
  %>

  <%= sort_javascript_includes.map {|m| javascript_include_tag(m)} %>

  <% if @header %>
    <%= @header %>
  <% end %>

</head>
<body>
  <% if @user and @user.id == 0 %>
    <div class="Admin">
      DANGER: You are in administrator mode. Proceed with caution.
    </div>
  <% end %>
  <div id="columns" style="height:100%">
    <table cellpadding="0" cellspacing="0" border="0" style="height:100%">
      <tr>

        <td valign="top">
          <table class="LeftSide" cellpadding="10" style='height:100%; white-space:nowrap'>
            <tr style="height:1px">
              <td id="banner">
                <%= link_to(@page_title || :app_banner.t, :controller => 'observer', :action => 'index') %>
              </td>
            </tr>
            <tr>
              <td valign="top" align="left">
                <%= link_to(:app_intro.t, :controller => 'observer', :action => 'intro') %><br/>
                <%= link_to(:app_how_to_use.t, :controller => 'observer', :action => 'how_to_use') %><br/>
                <%= link_to(:app_how_to_help.t, :controller => 'observer', :action => 'how_to_help') %><br/>
                <%= link_to(:app_send_a_comment.t, :controller => 'observer', :action => 'ask_webmaster_question') %><br/>
                <br/>

                <%= link_to(:app_index_a_z.t, :controller => 'name', :action => 'observation_index') %><br/>
                <%= link_to(:app_list_projects.t, :controller => 'project', :action => 'list_projects') %><br/>
                <br/>

                <%= :app_latest.t %>:<br/>
                &nbsp;&nbsp;<%= link_to(:app_latest_changes.t, :controller => 'observer', :action => 'list_rss_logs') %><br/>
                &nbsp;&nbsp;<%= link_to(:app_newest_images.t, :controller => 'image', :action => 'list_images') %><br/>
                &nbsp;&nbsp;<%= link_to(:app_comments.t, :controller => 'comment', :action => 'list_comments') %><br/>
                &nbsp;&nbsp;<%= link_to(:app_news.t, :controller => 'observer', :action => 'news') %><br/>
                <br/>

                <%= :app_observations_left.t %>:<br/>
                &nbsp;&nbsp;<%= link_to(:app_create_observation.t, :controller => 'observer', :action => 'create_observation') %><br/>
                &nbsp;&nbsp;<%= link_to(:app_sort_by_date_obs.t, :controller => 'observer', :action => 'list_observations') %><br/>
                <br/>

                <%= :app_species_list.t %>:<br/>
                &nbsp;&nbsp;<%= link_to(:app_create_list.t, :controller => 'species_list', :action => 'name_lister') %><br/>
                &nbsp;&nbsp;<%= link_to(:app_sort_by_date_spl.t, :controller => 'species_list', :action => 'list_species_lists') %><br/>
                &nbsp;&nbsp;<%= link_to(:app_sort_by_title.t, :controller => 'species_list', :action => 'species_lists_by_title') %><br/>
                <br/>

                <% if @user.nil? %>
                  <%= :app_account.t %>:<br/>
                  &nbsp;&nbsp;<%= link_to(:app_login.t, :controller => 'account', :action => 'login') %><br/>
                  &nbsp;&nbsp;<%= link_to(:app_create_account.t, :controller => 'account', :action => 'signup') %>
                <% else %>
                  <%= :app_current_user.t %>:<br/>
                  &nbsp;&nbsp;<%= h(@user.login) %><br/>
                  &nbsp;&nbsp;<%= link_to(:app_comments_for_you.t, :controller => 'comment', :action => 'show_comments_for_user', :id => @user.id) %><br/>
                  &nbsp;&nbsp;<%= link_to(:app_your_observations.t, :controller => 'observer', :action => 'show_user_observations', :id => @user.id) %><br/>
                  &nbsp;&nbsp;<%= link_to(:app_your_interests.t, :controller => 'interest', :action => 'list_interests') %><br/>
                  &nbsp;&nbsp;<%= link_to(:app_your_summary.t, :controller => 'observer', :action => 'show_user', :id => @user.id) %><br/>
                  &nbsp;&nbsp;<%= link_to(:app_preferences.t, :controller => 'account', :action => 'prefs') %><br/>
                  &nbsp;&nbsp;<a href="http://lists.mushroomobserver.org/listinfo.cgi/general-mushroomobserver.org"><%= :app_join_mailing_list.t%></a><br/>
                  &nbsp;&nbsp;<%= link_to(:app_logout.t, :controller => 'account', :action => 'logout_user') %>
                  <% if @user.id == 0 %>
                    <br/><br/>
                    <%= :app_admin.t %>:<br/>
                    &nbsp;&nbsp;<%= link_to(:app_users.t, :controller => 'observer', :action => 'users_by_name') %><br/>
                    &nbsp;&nbsp;<%= link_to(:app_email_all_users.t, :controller => 'observer', :action => 'email_features') %><br/>
                    &nbsp;&nbsp;<%= link_to(:app_add_to_group.t, :controller => 'account', :action => 'add_user_to_group') %><br/>
                  <% end %>
                <% end %><br/>
                <br/>

                <%= :app_languages.t %>:<br/>
                <% for locale in all_locales %>
                  &nbsp;&nbsp;<%= link_to(locale.sub('-','_').to_sym.t, h(reload_with_args(:user_locale => locale))) %><br/>
                <% end %>
                <br/>

                <%= link_to(:app_contributors.t, :controller => 'observer', :action => 'users_by_contribution') %><br/>
                <%= link_to(:app_site_stats.t, :controller => 'observer', :action => 'show_site_stats') %><br/>
                <%= link_to(:translators_note_title.t, :controller => 'observer', :action => 'translators_note') %><br/>
                <br/>

                <div id="color_note">
                  <%= link_to(:app_colors_from.t(:theme => css), :controller => 'observer', :action => 'color_themes') %><br/><br/>
                  <%= :app_powered_by.t %>:<br/>
                  <a href='http://www.rubyonrails.org'>Ruby&nbsp;on&nbsp;Rails</a><br/>
                  <%= :app_preferred_browser.t %>:<br/>
                  <a href='http://www.mozilla.com/firefox/'>FireFox</a>
                  <% if @invalid.nil? %>
                    <p>
                      <a href="http://validator.w3.org/check?uri=referer"><img
                          src="http://www.w3.org/Icons/valid-xhtml10"
                          alt="Valid XHTML 1.0 Transitional" height="31" width="88" border="0"/></a>
                    </p>
                  <% end %>
                </div>
              </td>
            </tr>
          </table>
        </td>

        <td width="100%" valign="top" class="main">
          <div style="padding:10px">

            <% pattern = session[:pattern]
            form_tag(:controller => 'observer', :action => 'pattern_search') do %>
              <%= :app_find.t %>: <%= text_field("search", "pattern", :size => 30, :value => pattern)%>
              <%= submit_tag :app_observations_find.l %>
              <%= submit_tag :app_images_find.l %>
              <%= submit_tag :app_names_find.l %>
              <%= submit_tag :app_locations_find.l %>
              <%= link_to(:app_advanced_search.l, :controller => 'observer', :action => 'advanced_search') %>
              <% if @start %>
                Start: <%= Time.now.to_f - @start.to_f %>
                <% @start = nil %>
              <% end %>
            <% end %>

            <% if flash[:notice] %>
              <%= boxify(flash[:notice_level]) %>
                <%= flash[:notice] %>
              <%= end_boxify %>
              <% flash_clear %>
            <% end %>

            <% no_session = !session_working?
            no_javascript = !javascript_enabled? && session[:js_override] != :off
            no_ajax       = can_do_ajax? == false && javascript_enabled? && session[:js_override] != :on
            no_browser    = can_do_ajax? == nil   && javascript_enabled? && session[:js_override] != :on
            if no_session || no_javascript || no_ajax || no_browser
              new_tab_set do
                add_tab(:app_no_session.t,    :controller => 'observer', :action => 'no_session')    if no_session
                add_tab(:app_no_javascript.t, :controller => 'observer', :action => 'no_javascript') if no_javascript
                add_tab(:app_no_ajax.t,       :controller => 'observer', :action => 'no_ajax')       if no_ajax
                add_tab(:app_no_browser.t,    :controller => 'observer', :action => 'no_browser')    if no_browser
              end
            end
            if @right_tabs %>
              <div class='right_tabs'>
                <%= @right_tabs.join('<br/>') %>
              </div>
            <% end
            if @tab_sets %>
              <div class='tab_sets'>
                <% for set in @tab_sets %>
                  <%= set.map {|tab| render_tab(*tab)}.join(' | ') %><br/>
                <% end %>
              </div>
            <% end %>

            <div id="Title"><%= @title %></div>

            <%= @content_for_layout %>

            <br/><br/><br/>
            <% if Locale.code.to_s != 'en-US' %>
              <div id="translators_credit">
                <hr width="250" align="left" />
                <%= :app_translators_credit.tpl %>
              </div>
            <% end %>
          </div>
        </td>

      </tr>
    </table>
  </div>

  <% if @javascripts && @javascripts.include?('cached_auto_complete') %>
    <div id="indicator" class="indicator" style="display:none">
      <%= image_tag('indicator.gif') %>
    </div>
  <% end %>

  <script src="http://www.google-analytics.com/urchin.js" type="text/javascript"></script>
  <script type="text/javascript">
    _uacct = "UA-1916187-1";
    if (typeof urchinTracker != 'undefined') urchinTracker();
  </script>

</body>
</html>
