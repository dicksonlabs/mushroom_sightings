<html>
<head>
  <META http-equiv=Content-Type content="text/html; charset=UTF-8"/>
  <title>Mushroom Observer: <%= controller.action_name %></title>
  <%= css = nil
	if CSS.member?(controller.action_name)
		css = controller.action_name
	else
		unless @session['user'].nil?
        	css = @session['user'].theme
		end
	end
	unless CSS.member?(css)
		css = CSS[rand(CSS.length)]
	end
	stylesheet_link_tag 'general', css %>
</head>
<body>
	<div id="banner">
		<%= @page_title || "Mushroom Observer" %>
	</div>
    <div id="columns">
		<table>
			<tr>
				<td valign="top" height="100%">
					<table class="LeftSide" cellpadding="20" height="100%">
						<tr>
							<td valign="top">
								<%= link_to 'Introduction', :controller => 'observer',
								            :action => 'intro' %>
								<br/><br/>
								<%= link_to 'New&nbsp;Observation', :controller => 'observer',
								            :action => 'new_observation' %>
								<br/><br/>
								Observations:<br/>
								&nbsp;&nbsp;<%= link_to 'Most&nbsp;Recent', :controller => 'observer',
								                        :action => 'list_observations' %>
								<br/>
								&nbsp;&nbsp;<%= link_to 'By&nbsp;Name', :controller => 'observer',
								                        :action => 'observations_by_name' %>
								<br/><br/>
								Images:<br/>
								&nbsp;&nbsp;<%= link_to 'Most&nbsp;Recent', :controller => 'observer',
								                        :action => 'list_images' %>
								<br/>
								&nbsp;&nbsp;<%= link_to 'By&nbsp;Title', :controller => 'observer',
								                        :action => 'images_by_title' %>
								<br/><br/>
								<% if @session['user'].nil? %>
								Account:<br/>
								&nbsp;&nbsp;<%= link_to 'Login', :controller => 'account',
								                        :action => 'login' %><br/>
								&nbsp;&nbsp;<%= link_to 'New&nbsp;Account', :controller => 'account',
														:action => 'signup' %>
								<% else %>
								Current&nbsp;user:<br/>
								&nbsp;&nbsp;<%= h(@session['user'].login) %><br/>
								&nbsp;&nbsp;<%= link_to 'Preferences', :controller => 'account',
								                        :action => 'prefs' %><br/>
								&nbsp;&nbsp;<%= link_to 'Logout', :controller => 'account',
								                        :action => 'logout' %>
								<% end %>
								<br/><br/>
								<div id="color_note">
									<%= link_to(sprintf('Colors from <i>%s</i>', css),
												:controller => 'observer', :action => 'color_themes') %>
								</div>
							</td>
						</tr>
					</table>
				</td>
				<td width=100% class="main">
					<p><%= flash[:notice] %></p>
					<%= @content_for_layout %>
				</td>
			</tr>
		</table>
	</div>
</body>
</html>
