<%
  @title ||= :review_authors_title.t(
    :name => @location.display_name
  )

  # Show Name
  new_tab_set do
    add_tab(:app_show_location.t, :action => 'show_location', :id => @location.id)
  end
%>

<p>
  <%= :review_authors_authors.t %><br/>
  <% for u in @authors %>
    &nbsp;&nbsp;<%= user_link(u) %>
    | <%= link_to(:review_authors_remove_author.t,
                  {:action => :review_authors, :id => @location.id, :remove => u.id},
                  {:confirm => :app_are_you_sure.l}) %>
    <br/>
  <% end %>
</p>

<p>
  <%= :review_authors_other_users.t %><br/>
  <%
    for u in @users
      unless @authors.member?(u) %>
        &nbsp;&nbsp;<%= user_link(u) %>
        | <%= link_to(:review_authors_add_author.t, :action => :review_authors,
                      :id => @location.id, :add => u.id) %>
        <br/>
      <% end %>
  <% end %>
</p>
