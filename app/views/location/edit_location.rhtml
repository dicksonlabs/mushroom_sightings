<%  if @title.nil?
        @title = 'Edit Location'
    end %>
<div id="Title"><%= @title %></div>

<%= link_to(:location_all.l, :action => 'list_place_names') %><br/>

<% form_tag(:action => 'update_location', :id => @location) do %>
<br/>
<center><%= submit_tag("Update") %></center>

<table cellpadding="10">
    <tr>
        <%= render :partial => 'form_locations', :locals => {
            :where => @where
        } %>
    </tr>
</table>
<% end %>

<br/>
